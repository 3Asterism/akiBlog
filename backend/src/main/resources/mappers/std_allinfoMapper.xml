<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.akisan.akiblog.mapper.std_allinfoMapper">
    <resultMap id="BaseResultMap" type="com.akisan.akiblog.entity.std_allinfo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="classname" property="classname"/>
        <result column="inschool" property="inschool"/>
        <result column="academy" property="academy"/>
    </resultMap>

    <select id="getOutOfSchool" resultMap="BaseResultMap">
        SELECT * FROM std_allinfo
        WHERE inschool <![CDATA[ = ]]> "1"
    </select>
</mapper>